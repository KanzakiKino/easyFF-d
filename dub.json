{
    "name": "easyff-d",
    "description": "D bindings of easyFF.",
    "license": "LGPL-3.0",
    "copyright": "Copyright Â© 2018, KanzakiKino",
    "platforms": ["posix"],

    "authors": ["KanzakiKino"],
    "homepage": "https://knzk.work",

    "targetType": "staticLibrary",
    "targetPath": "./bin",
    "libs": [
        "avutil",
        "avcodec",
        "avformat",
        "swscale",
        "swresample"
    ],
    "lflags-posix-x86_64": ["$PACKAGE_DIR/lib/posix-x86_64/libeasyff.a"],
    "lflags-posix-x86"   : ["$PACKAGE_DIR/lib/posix-x86/libeasyff.a"],
    "libs-windows-x86"   : ["$PACKAGE_DIR/lib/windows-x86/easyff"],

    "sourcePaths": ["./src"],

    "-ddoxFilterArgs": ["--in","easyff."],

    "configurations": [
        {
            "name": "default"
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "mainSourceFile": "./test.d",

            "versions": ["SafeMode"]
        }
    ]
}

{
    "name": "easyff-d",
    "description": "D bindings of easyFF.",
    "license": "GPL-3.0",
    "copyright": "Copyright Â© 2018, KanzakiKino",
    "platforms": ["posix","windows"],

    "authors": ["KanzakiKino"],
    "homepage": "https://knzk.work",

    "targetType": "staticLibrary",
    "targetPath": "./bin",
    "libs": [
        "avutil",
        "avcodec",
        "avformat",
        "swscale",
        "swresample",
        "easyff"
    ],
    "lflags-posix-x86_64"  : ["$PACKAGE_DIR/lib/posix-x86_64/libeasyff.a"],
    "lflags-posix-x86"     : ["$PACKAGE_DIR/lib/posix-x86/libeasyff.a"],

    "lflags-windows-x86"   : ["-LIBPATH:$PACKAGE_DIR/lib/windows-x86/"],

    "sourcePaths": ["./src"],

    "-ddoxFilterArgs": ["--in","easyff."],

    "configurations": [
        {
            "name": "default",
            "copyFiles-windows-x86": ["./lib/windows-x86/*.dll"]
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "mainSourceFile": "./test.d",

            "versions": ["SafeMode"]
        }
    ]
}
